	public static void mostrarVistos(Pelicula[] pelicula, Serie[] serie) {
		System.out.println();
		System.out.println("=====================================================================================");
		//Muestra de los datos de las peliculas vistas
		System.out.println("PELICULAS VISTAS");
		for (int i=0; i<pelicula.length; i++) {
			if(pelicula[i].esVisto()==true) {
				System.out.println();
				pelicula[i].mostrarDatos("Pelicula "+(i+1));
