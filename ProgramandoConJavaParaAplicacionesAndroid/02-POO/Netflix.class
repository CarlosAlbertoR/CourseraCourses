			}
		}
		System.out.println("La serie con más temporadas es " + nombre + " con " + temp + " temporadas");
		serie[a].mostrarDatos("");
	}
	
	public static void peliculaMasReciente(Pelicula[] pelicula) {
		int temp = 0;
		int a = 0;
		String nombre = "";
		System.out.println();
		System.out.println("=====================================================================================");
		System.out.println("PELICULA MÁS RECIENTE");
		for (int i=0; i<pelicula.length; i++) {
			if(pelicula[i].getAño() > temp) {
